@using System.Globalization
@using SW.Resources
@model ListagemProdutoViewModel
<div>
    <button type="button" class="btn btn-default navbar-btn pull-right"><i class="glyphicon glyphicon-plus" style="margin-right: 10px;"></i>@ACAO.NOVO_PRODUTO</button>
</div>
<table class="table table-striped table-bordered">
    <thead>
    <th>@TITULO.ACOES</th>
    <th>@PROPRIEDADE.Nome</th>
    <th>@PROPRIEDADE.Preco</th>
    <th>@PROPRIEDADE.PromocaoAtiva</th>
    </thead>
    <tbody>
        @foreach (var prod in Model.Lista)
        {
            var promocaoAtiva = prod.PromocaoAtiva == null ? "-" : prod.PromocaoAtiva.Nome;
            <tr>
                <th><a href="javascript:void(0);" class="glyphicon glyphicon-pencil" style="cursor:pointer;"></a>&nbsp;&nbsp;<a href="javascript:void(0);" class="glyphicon glyphicon-remove" style="cursor:pointer;" onclick="ConfiguraModalConfirmacaoExcluirProduto('@prod.IdSerializado', '@prod.Nome');" data-toggle="modal" data-target="#modal-confirmacao"></a></th>
                <th>@prod.Nome</th>
                <th>@prod.Preco.ToString("C", new CultureInfo("pt-BR"))</th>
                <th>@promocaoAtiva</th>
            </tr>
        }
    </tbody>
</table>