@using System.Globalization
@using SW.Resources
@model ListagemProdutoViewModel
<table class="table table-striped table-bordered">
    <thead>
    <th>@TITULO.ACOES</th>
    <th>@PROPRIEDADE.NOME</th>
    <th>@PROPRIEDADE.PRECO</th>
    <th>@PROPRIEDADE.PROMOCAO_ATIVA</th>
    </thead>
    <tbody>
        @foreach (var prod in Model.Lista)
        {
            var promocaoAtiva = prod.PromocaoAtiva == null ? "-" : prod.PromocaoAtiva.Nome;
            <tr>
                <td><a href="javascript:void(0);" class="glyphicon glyphicon-pencil" style="cursor:pointer;" onclick="ConfiguraModalEditarProduto(@prod.Id);" data-toggle="modal" data-target="#modal-edicao"></a>&nbsp;&nbsp;<a href="javascript:void(0);" class="glyphicon glyphicon-remove" style="cursor:pointer;" onclick="ConfiguraModalConfirmacaoExcluirProduto(@prod.Id, '@prod.Nome');" data-toggle="modal" data-target="#modal-confirmacao"></a></td>
                <td>@prod.Nome</td>
                <td>@prod.Preco.ToString("C", new CultureInfo("pt-BR"))</td>
                <td>@promocaoAtiva</td>
            </tr>
        }
    </tbody>
</table>