@using System.Globalization
@using SW.Resources
@model CarrinhoComprasViewModel
<table class="table table-striped table-bordered">
    <thead>
    <th>@TITULO.ACOES</th>
    <th>@PROPRIEDADE.ITEM</th>
    <th>@PROPRIEDADE.PRECO</th>
    <th>@PROPRIEDADE.QUANTIDADE</th>
    <th>@PROPRIEDADE.PROMOCAO</th>
    <th>@PROPRIEDADE.VALOR_TOTAL</th>
    </thead>
    <tbody>
        @foreach (var item in Model.Itens)
        {
            <tr>
                <td><a href="javascript:void(0);" class="glyphicon glyphicon-remove" style="cursor:pointer;" onclick="ConfiguraModalConfirmacaoExcluirItemCarrinho(@item.ProdutoId, '@item.ProdutoNome');" data-toggle="modal" data-target="#modal-confirmacao"></a></td>
                <td>@item.ProdutoNome</td>
                <td>@item.Preco.ToString("C", new CultureInfo("pt-BR"))</td>
                <td>@item.Quantidade</td>
                <td>@item.PromocaoNome</td>
                <td>@item.PrecoTotal.ToString("C", new CultureInfo("pt-BR"))</td>
            </tr>
        }
        <tr>
            <td colspan="5" style="text-align:right;">@Html.LabelFor(m => m.ValorTotal)</td>
            <td>@Model.ValorTotal.ToString("C", new CultureInfo("pt-BR"))</td>
        </tr>
    </tbody>
</table>