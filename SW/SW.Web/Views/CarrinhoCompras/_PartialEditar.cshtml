@model CarrinhoComprasItemViewModel
<div class="row" style="margin-bottom: 10px;">
    <div class="col-md-1"></div>
    <div class="col-md-4 text-right">@Html.LabelFor(m => m.ProdutoNome)</div>
    <div class="col-md-6">@Html.DropDownListFor(m => m.ProdutoId, ViewBag.ListaProdutos as IEnumerable<SelectListItem>, "", new { style = "height: 26px; width: 100%;" })</div>
    <div class="col-md-1"></div>
</div>
<div class="row" style="margin-bottom: 10px;">
    <div class="col-md-1"></div>
    <div class="col-md-4 text-right">@Html.LabelFor(m => m.Quantidade)</div>
    <div class="col-md-6">@Html.TextBoxFor(m => m.Quantidade, new { style = "width: 100%; white-space: nowrap;", id = "quantidade" })</div>
    <div class="col-md-1"></div>
</div>
<script type="text/javascript">
    $(document).ready(function() {
        $("#quantidade").keydown(function (e) {
            // Allow: backspace, delete, tab, escape, enter and .
            if ($.inArray(e.keyCode, [46, 8, 9, 27, 13, 110, 190]) !== -1 ||
                // Allow: Ctrl+A
                (e.keyCode == 65 && e.ctrlKey === true) ||
                // Allow: home, end, left, right, down, up
                (e.keyCode >= 35 && e.keyCode <= 40)) {
                // let it happen, don't do anything
                return;
            }
            // Ensure that it is a number and stop the keypress
            if ((e.shiftKey || (e.keyCode < 48 || e.keyCode > 57)) && (e.keyCode < 96 || e.keyCode > 105)) {
                e.preventDefault();
            }
        });
    });
</script>