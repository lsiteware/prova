@using SW.Resources
@model ListagemPromocaoViewModel
<table class="table table-striped table-bordered">
    <thead>
        <th>@TITULO.ACOES</th>
        <th>@PROPRIEDADE.Nome</th>
        <th>@PROPRIEDADE.QuantidadeProdutos</th>
        <th>@PROPRIEDADE.TipoCobranca</th>
    </thead>
    <tbody>
        @foreach (var prom in Model.Lista)
        {
            <tr>
                <th><a href="javascript:void(0);" class="glyphicon glyphicon-pencil" style="cursor:pointer;" onclick="ConfiguraModalEditarPromocao(@prom.Id);" data-toggle="modal" data-target="#modal-edicao"></a>&nbsp;&nbsp;<a href="javascript:void(0);" class="glyphicon glyphicon-remove" style="cursor:pointer;" onclick="ConfiguraModalConfirmacaoExcluirPromocao(@prom.Id, '@prom.Nome');" data-toggle="modal" data-target="#modal-confirmacao"></a></th>
                <th>@prom.Nome</th>
                <th>@prom.QuantidadeProdutos</th>
                <th>@prom.TipoCobranca</th>
            </tr>
        }
    </tbody>
</table>